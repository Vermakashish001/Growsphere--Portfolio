# Email Configuration for Contact Form
# Copy this file to .env.local and fill in your actual values

# SMTP Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-character-app-password
EMAIL_TO=your-email@gmail.com

# Optional SMTP Settings (defaults shown)
# For Gmail: smtp.gmail.com, port 587
# For Zoho: smtp.zoho.com, port 587 (use smtp.zoho.in for India)
# For Outlook: smtp-mail.outlook.com, port 587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# App Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Optional: Contact Form Configuration
CONTACT_FORM_ENDPOINT=/api/contact
AUTO_REPLY_ENABLED=true

# Security (generate your own secret)
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000
